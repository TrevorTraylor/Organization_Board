<div class="container">
	<h2><%= @post.title %></h2>
	<div class="row post">
		<div class="col-md-2 bold">Created By:</div>
		<div class="col-md-6"><%= @post.user.first_name %></div><br>
		<div class="col-md-2 bold">Description:</div>
		<div class="col-md-6"><%= @post.content %></div>
	</div>
	<% if flash[:errors] %>
	<% flash[:errors].each do |t| %>
	<%= t %>
	<%end%>
	<%end%>

	<p>People who joined this group:</p>

	<table>
		<thead>
			<tr>
				<th>Name</th>
				<th>Email</th>
			</tr>
		</thead>
		<tbody>
			<% @likes.each do |like| %>
				<tr>
					<td><%= like.user.first_name + ' ' + like.user.last_name %></td>
					<td><%= like.user.email %></td>
				</tr>

		</tbody>
	</table>
	<%= button_to 'Join', post_likes_path(@post) %>
	<%= button_to 'Leave Group', post_like_path(@post, like), method: :delete%>
				<% end %>	

	<%= link_to 'Back to Organizations', posts_path %>



</div>